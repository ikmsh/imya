<Window x:Class="TextSizeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="slaaaaaay" Height="400" Width="600">
    <Grid>
        <TextBox x:Name="textBox" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 FontSize="{Binding ElementName=slider, Path=Value}" 
                 Margin="10,85,10,10"/>

        <Slider x:Name="slider" Minimum="10" Maximum="50" Value="12" 
                VerticalAlignment="Top" Margin="10,0,10,0" 
                Height="30" ValueChanged="Slider_ValueChanged"/>

        <Button Content="soxranit" VerticalAlignment="Top" Margin="10,40,10,0" 
                Click="SaveButton_Click"/>
    </Grid>
</Window>
